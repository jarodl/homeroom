<h2 class="header"><%= @assignment.name %><span class="green"> for <%= Course.find(@assignment.course_id).title %></span></h2>

<div class="content">
  <p>
  <% if @assignment.upload %>
    <%= link_to 'View assignment', @assignment.upload.url %>
  <% end %>
  </p><br />

  <p>
    <%= label_tag 'Upload completed assignment' %><br />
    <%= file_field_tag :upload %>
  </p><br />

  <p>
  <%= submit_tag 'Upload', {:class => 'blank'}%>
  </p>

  <div id="comments">
    <% if !@assignment.comments.empty? %>
      <h3 class="header">Comments</h3>
      <%= render :partial => @assignment.comments %>
    <% end %>
  </div>

  <div class="new_comment">
    <h3 class="header">Add a new comment</h3>
    <% remote_form_for [@assignment, Comment.new] do |f| %>
      <p>
        <%= f.text_area :content %>
      </p>

      <p><%= f.submit "Add Comment", :class => 'blank' %></p>
    <% end %>
  </div>

</div>
