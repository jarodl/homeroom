<html>
  <head>
    <title><%= h(yield(:title) || "homeroom | effective class management") %></title>
    <%= stylesheet_link_tag 'style' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="header">

      <div class="wrapper">

        <div id="logo">
          <h1>homeroom <span> | effective class management</h1>
          </div>

          <% if current_user %> 
            <div id="login">
              <p>Logged in as <%= current_user_name %> (<%= link_to 'Log-out', logout_path %>)</p>
            </div>		

            <div id="nav">
              <ul class="nav">
                <a href=""><li class="active">Overview</li></a>
                <a href="#"><li>Chem: 121A</li></a>
                <a href="#"><li>Math: 321</li></a>
                <a href="#"><li>Math: 152</li></a>
                <a href="#"><li>CS: 321</li></a>
                <a href="#"><li>CS: 340</li></a>
              </ul>
            </div>
            <!-- end nav -->
          <% end %>

        </div>
        <!-- end wrapper -->

      </div>
      <!-- end header -->


    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <%- end -%> 


    <div class="wrapper">

      <%= yield %>

    </div>
    <!-- end wrapper -->

    <div id="footer">
      <div class="wrapper">
        <ul>
          <li><a href="#">About</a></li>
          <li><a href="#">Github</a></li>
          <li><a href="#">Follow On Twitter</a></li>
          <li><a href="#">API</a></li>
          <li><a href="#">Help</a></li>
        </ul>
      </div>
    </div>
    <!-- end footer -->

  </body>
</html>
