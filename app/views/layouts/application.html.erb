<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "homeroom | effective class management") %></title>
    <%= stylesheet_link_tag 'style' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="header">

      <div class="wrapper">

        <div id="logo">
          <h1>homeroom <span> | effective class management</h1>
          </div>

          <div id="login">
            <p>Logged in as <%= current_user_name %> (<%= link_to 'Log-out', logout_path %>)</p>
          </div>		

          <div id="nav">
            <ul class="navigation">
              <li <%= 'class = "current"' if session[:current_id] == 'home'%>><%= link_to 'Overview', root_path %></li>
              <% current_user.courses.each do |course| %>
                <li <%= 'class = "current"' if session[:current_id] == course.id %>><%= link_to course.title, course_path(course) %></li>
              <% end %>
              <% if current_user.is_admin? %>
                <li><%= link_to 'Admin', admin_root_path %></li>
              <% end %>
            </ul>
          </div>
          <!-- end nav -->

        </div>
        <!-- end wrapper -->

      </div>
      <!-- end header -->


    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <%- end -%> 


    <div class="wrapper">
      <div id="main">
        <div class="col" id="left-col">
          <%= yield %>
        </div>

        <div class="col" id="right-col">

          <a class="button" href="#">
            <div id="add">
              <p>New quick link</p>
            </div>
          </a>

          <div id="links">
            <h3>Quick Links:</h3>
            <ul class="links">
              <li><a href="#">Submit CS:321 homework</a></li>
              <li><a href="#">View Math:152 grades</a></li>
              <li><a href="#">Download CS:340 homework</a></li>
              <li><a href="#">View Chem:121A syllabus</a></li>
            </ul>
            <small><a href="#">Edit quick links</a></small>
          </div>

        </div>
        <!-- end right-col -->
      </div>
      <!-- end main -->

    </div>
    <!-- end wrapper -->

    <div id="footer">
      <div class="wrapper">
        <ul>
          <li><a href="#">About</a></li>
          <li><a href="#">Github</a></li>
          <li><a href="#">Follow On Twitter</a></li>
          <li><a href="#">API</a></li>
          <li><a href="#">Help</a></li>
        </ul>
      </div>
    </div>
    <!-- end footer -->

  </body>
</html>
