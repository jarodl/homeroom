<div id="login-box">
  <h2 class="header">Please login <small class="grey">- Don't have an account? <%= link_to "Sign up!", signup_path %></small></h2>

  <% form_tag sessions_path do %>
    <p>
      <%= label_tag :login, "Username or Email Address" %><br />
      <%= text_field_tag :login, params[:login] %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Log in", :class => 'blank' %></p>
  <% end %>
</div>
