<div id="login-box">
  <h2 class="header">Create an account <small class="grey">- Already have an account? <%= link_to "Log in", login_path %></span></h2>

  <% form_for @user do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email, "Email Address" %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, "Confirm Password" %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p><%= f.submit "Sign up", :class => 'blank' %></p>
  <% end %>
</div>
